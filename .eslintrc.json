{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "eslint-plugin-prettier",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "eslint-plugin-prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "eslint-plugin-prettier/prettier": "error"
    }
}
